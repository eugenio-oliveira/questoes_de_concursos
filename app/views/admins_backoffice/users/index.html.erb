<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Assuntos</h1>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>        
        <th>
        <%= link_to "new_admins_backoffice_user_path" do %>
              <button type="button" class="btn btn-success btn-circle">
                <i class="fa fa-plus"></i>
               </button>
            <% end %>
        </th>        
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>        
          <td style="width: 100px;">
            <%= link_to "edit_admins_backoffice_user_path(user)" do %>
              <button type="button" class="btn btn-primary btn-circle">
                <i class="fa fa-edit"></i>
               </button>
            <% end %>
            <%= link_to 'admins_backoffice_user_path(user), method: :delete, data: { confirm: "deseja apagar esse registro?" }' do %>
              <button type="button" class="btn btn-danger btn-circle">
                <i class="fa fa-minus"></i>
              </button>
            <% end %>
          </td>        
        </tr>
      <% end %>
     </tbody>
  </table>
  <div class="text-center">
      <%= paginate @users %>
  </div>
</div>